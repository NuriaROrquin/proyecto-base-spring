<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource_app" />
		<!-- Properties -->
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.validator.apply_to_ddl">false</prop>
				<prop key="hibernate.validator.autoregister_listeners">false</prop>
                <prop key="hibernate.dialect">${db.aplicacion.test.dialect}</prop>
                <prop key="hibernate.hbm2ddl.auto">${db.aplicacion.test.hbm2ddl.auto}</prop>
				<prop key="hibernate.show_sql">false</prop>
			</props>
		</property>
		<!-- Mappings -->
		<property name="packagesToScan">
			<list>
				<value>ar.gov.arba.fiscalizacionremota.model</value>
			</list>
		</property>
		<property name="mappingResources">
			<list>
				<!-- <value>User.hbm.xml</value> -->
			</list>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

    <context:component-scan base-package="ar.gov.arba.fiscalizacionremota" />
    <context:component-scan base-package="ar.gov.arba.fiscalizacionremota.administracion" />

</beans>

