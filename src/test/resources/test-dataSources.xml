<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<bean id="dataSource_app" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${db.aplicacion.test.driver}" />
		<property name="url" value="${db.aplicacion.test.url}" />
		<property name="username" value="${db.aplicacion.test.username}" />
		<property name="password" value="${db.aplicacion.test.password}" />
	</bean>

	<bean id="dataSource_gestion" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${db.gestion.test.driver}" />
		<property name="url" value="${db.gestion.test.url}" />
		<property name="username" value="${db.gestion.test.username}" />
		<property name="password" value="${db.gestion.test.password}" />
	</bean>

</beans>

